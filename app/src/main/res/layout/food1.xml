<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_menu"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/PagePilihMenu"
        android:text="Pilih Menu "
        android:background="@color/green"
        android:textStyle="bold"
        android:textSize="30dp"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paket Hemat"
       android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="18dp"/>

    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivMenu1"
            tools:src = "@mipmap/ic_launcher"
            android:scaleType="fitCenter"
            android:onClick="move"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvf1_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="Rp 28000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp"
                    android:text="Nasi padang+ es teh+ ati Rempelo+ lalapan "
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paket Nasi Padang+ Ati Rempelo "
                    android:textSize="18sp"
                    android:textStyle="bold" />


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/but1"
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:text="Pilih" />

                <Button
                    android:textColorHint="@color/red"
                    android:id="@+id/butdel"
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:background="@color/red"
                    android:textColor="@color/red"
                    android:layout_weight="1"
                    android:text="Hapus" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
           android:id="@+id/ivMenu2"
            tools:src = "@mipmap/ic_launcher"
            android:scaleType="fitCenter"
            android:onClick="move"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvf1_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="Rp 25000" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Paket Nasi Padang + Ayam Bakar "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nasi padang+ es teh+ ayam bakar+ lalapan "
                    android:textSize="12sp"
                    android:paddingTop="20dp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/but2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minuman"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textSize="18dp"/>
    <LinearLayout
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivMenu3"
            tools:src = "@mipmap/ic_launcher"
            android:scaleType="fitCenter"
            android:onClick="move"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvf1_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:text="Rp 2500" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Es Teh Manis "
                    android:textSize="18sp"
                    android:textStyle="bold" />



            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/but3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilih" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="170dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Total:  "
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="199dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Nominal angka"
                android:textSize="18sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/but4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bayar" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
